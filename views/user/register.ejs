<%- include('../layout/header.ejs') %>


<section class="ezy__signup3 d-flex align-items-center"
style="background-image: url(https://cdn.easyfrontend.com/pictures/sign-in-up/sign-in-up-1.png)">
<div class="container">
  <div class="row py-5">
    <div class="col-lg-6">
      <div class="card ezy__signup3-form-card">
        <div class="card-body p-md-5">
          <h2 class="ezy__signup3-heading mb-4 mb-md-5">Sign Up</h2>

          <form action="/api/v1/register" method="post" enctype="multipart/form-data">
            <div class="row">
              <div class="col-12">
                <div class="form-group mb-4">
                  <label for="first-name" class="mb-2">User name</label>
                  <input name="username" type="text" class="form-control" id="first-name" placeholder="User Name Name" />
                </div>
              </div>
              
              
              <div class="col-12">
    <label for="profession" class="form-label">Profession</label>
    <select required id="profession" name="profession" class="form-select">
      <option selected>Profession . . .</option>
      <option value="Construction Manager">Construction Manager</option>
      <option value="Surveyor">Surveyor</option>
      <option value="Structural Engineer">Structural Engineer</option>
      <option value="Site Engineer">Site Engineer</option>
      <option value="quantity surveyor">Quantity Surveyor</option>
      <option value="architect">Architect</option>
      <option value="material engineer">Material Engineer</option>
      <option value="civil engineer">Civil Engineer</option>
      <option value="geotechnical engineer">Geotechnical Engineer</option>
      <option value="construction estimator">Construction Estimator</option>
      <option value="project manager">Project Manager</option>
      <option value="lab technician">Lab Technician</option>
      <option value="Other">Other</option>
    </select>
  </div>
              
              <div class="col-12">
                <div class="form-group mb-4">
                  <label for="email" class="mb-2">Email</label>
                  <input type="email" class="form-control" id="email" placeholder="Your Email Address" name="email"/>
                </div>
              </div>
              <div class="col-12"> 
    <label for="avatar" class="form-label">Upload Profile picture:</label>
    <input type="file" class="form-control"  name="avatar" required>
</div>
              <div class="col-12">
                <div class="form-group mb-4">
                  <label for="password" class="mb-2">Password</label>
                  <input name="password" type="password" class="form-control" id="password" placeholder="Enter Password" />
                </div>
              </div>
             
            </div>
            <div class="form-group mb-4">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="agree" />
                <label class="form-check-label" for="agree">
                  I accept to the <a href="#">terms & condition</a>, <a href="#">privacy policy</a>
                </label>
              </div>
            </div>
            <button type="submit" class="btn ezy__signup3-btn-submit w-100">Sign Up</button>

            <div class="position-relative ezy__signup3-or-separator">
              <hr class="my-4 my-md-5" />
              <span class="px-2">Or</span>
            </div>

    
            

            <div class="text-center mt-4 mt-md-5">
              <p class="mb-0 opacity-50 lh-1">Already have an account?</p>
              <a href="/api/v1/login" class="btn btn-link py-0 text-dark text-decoration-none">Sign In</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
  

<%- include('../layout/footer.ejs') %>