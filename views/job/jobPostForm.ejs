<%- include('../layout/header.ejs') %>


<style>
    body {
        font-family: 'Open Sans', sans-serif;
        background-color: #f8f9fa;
    }
    .form-label {
        font-weight: 600;
    }
    .form-control {
        border-radius: 0.375rem;
    }
    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        font-weight: 600;
    }
    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }
    .form-container {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 0.375rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>
</head>
<body>
<div class="container mt-5">
    <div class="form-container">
        <form class="row g-3" action="/api/v1/job/create" method="post">
            <div class="col-md-6">
                <label for="jobTitle" class="form-label">Job Title</label>
                <input type="text" name="title" class="form-control" id="jobTitle" required placeholder="e.g., Civil Engineer">
            </div>

            <div class="col-md-6">
                <label for="companyName" class="form-label">Company Name</label>
                <input type="text" name="companyName" class="form-control" id="companyName" required placeholder="Please write company name">
            </div>

            <div class="col-md-12">
                <label for="companyIntroduction" class="form-label">Company Introduction</label>
                <textarea rows="5" name="companyDescription" class="form-control" id="companyIntroduction" placeholder="Introduce the company you're posting the job for"></textarea>
            </div>

            <div class="col-md-12">
                <label for="jobDescription" class="form-label">Full Job Description</label>
                <textarea rows="5" name="jobDescription" class="form-control" id="jobDescription" placeholder="Describe the job in detail"></textarea>
            </div>

            <div class="col-md-4">
                <label for="salaryFrom" class="form-label">Salary Range (From)</label>
                <input type="number" name="salary.from" class="form-control" id="salaryFrom" placeholder="Salary range from">
            </div>

            <div class="col-md-4">
                <label for="salaryTo" class="form-label">Salary Range (To)</label>
                <input type="number" name="salary.to" class="form-control" id="salaryTo" placeholder="Salary range to">
            </div>

            <div class="col-md-4">
                <label for="experienceRequired" class="form-label">Experience Required</label>
                <input type="number" name="experienceRequired" class="form-control" id="experienceRequired" placeholder="Number of years">
            </div>

            <div class="col-md-6">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="location.country" class="form-control" id="country" placeholder="Country">
            </div>

            <div class="col-md-6">
                <label for="city" class="form-label">City</label>
                <input type="text" name="location.city" class="form-control" id="city" placeholder="City">
            </div>

            <div class="col-md-12">
                <label for="jobLink" class="form-label">Share Job Link</label>
                <input type="text" name="link" class="form-control" id="jobLink" placeholder="Paste the job link here if you have">
            </div>

            <div class="col-md-12">
                <label for="howToApply" class="form-label">How to Apply</label>
                <textarea rows="4" name="howToApply" class="form-control" id="howToApply" placeholder="Please describe how to apply for this job"></textarea>
            </div>

            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-success btn-md">Post Job</button>
            </div>
        </form>
    </div>
</div>


<%- include('../layout/footer.ejs') %>