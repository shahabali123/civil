<section class="ezy__careers15" id="ezy__careers15">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <h1 class="ezy__careers15-heading mb-5"><%= jobsCount %> Jobs found</h1>
        </div>
        <!-- card start -->
        <% for( job of jobs ) { %>
          <div class="col-12 mt-4">
            <div class="ezy__careers15-card p-3 p-md-4">
              <div class="row align-items-center w-100">
                
                <div class="col-12 col-md-7 mt-3 mt-md-0">
                  <div>
                    <a href="/api/v1/job/<%= job._id %>"><h4 class="fw-bold"><%= job.title %></h4></a>
                    <h5><span><%= job.companyName %></span> - <%= job.location.country %>, <%= job.location.city %></h5>
                  </div>
                  <div class="mt-4">
                    <p class="opacity-50">Posted <%= Math.ceil((Date.now() - job.postedAt) / (1000 * 60 * 60 * 24)) %>
                      Days ago - <% if (job.applicant && job.applicant.length) { %>
                        <%= job.applicant.length %>
                      <% } else{%> 0 <% } %> applicants</p>
                    <div class="d-flex align-items-center">
                      <div>
                        <img src="<%= job.postedBy.avatar.url %>" alt="" class="rounded-circle" width="50" height="50">
                      </div>
                      <div class="ms-2">
                        <h6 class="mb-0 fw-bold">Contact: <%= job.postedBy.username %></h6>
                        <p><%= job.postedBy.email %></p>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-md-3 mt-3 mt-md-0">
                  <div class="d-flex flex-column align-items-md-center h-100">
                    <a href="/api/v1/job/<%= job._id %>">
                    <button class="ezy__careers15-btn mt-3">See details<i class="far fa-check-square ms-2"></i></button></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% } %>
        <!-- card end -->
        
      </div>
    </div>
    </section>




